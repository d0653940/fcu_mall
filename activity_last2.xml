<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Last2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/gan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招乾麵/$50"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btn_add1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:onClick="UP"
            android:text="+" />

        <Button
            android:id="@+id/btn_down1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:onClick="Down"
            android:text="-" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/dumpling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水餃們/$50"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btn_add2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:onClick="UP"
            android:text="+" />

        <Button
            android:id="@+id/btn_down2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:onClick="Down"
            android:text="-" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酸辣湯/$35"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btn_add3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:onClick="UP"
            android:text="+" />

        <Button
            android:id="@+id/btn_down3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:onClick="Down"
            android:text="-" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="小配菜/$10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btn_add4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:onClick="UP"
            android:text="+"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn_down4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:onClick="Down"
            android:text="-"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textSize="35sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Enter"
            android:text="點餐" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>